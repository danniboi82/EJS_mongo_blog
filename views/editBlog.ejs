<% include ./partials/navbar %>
    <div class="ui main text container segment">


        <div class="ui huge header">Edit <%= blog.title %></div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input name='title' type="text" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label>Content</label>
                <textarea name='content' type="text"><%= blog.content %></textarea>
            </div>
            <div class="field">
                <label>Image URL</label>
                <input name='image' type="text" value="<%= blog.image %>">
            </div>
            <button class="ui big violet basic button" type="submit">Submit</button>
        </form>

    </div>

    <% include ./partials/footer %>