<% include ./partials/navbar %>
    <div class="ui main text container segment detailsWrapper">
        <h1>Blog
            <%= blog.title %>
        </h1>
        <div class="ui image blogDetails">
            <img src="<%= blog.image %>" alt="">
        </div>
        <h4>
            <%= blog.content %>
        </h4>
        <p>
            <%= blog.created.toDateString() %>
        </p>
        <a class='ui basic green button' href='/blogs/<%= blog._id %>/edit'> Edit </a>

        <form class='deleteButton' action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class='ui basic red button' type="submit"> Delete </button>
        </form>
    </div>
    <% include ./partials/footer %>